@page
@model RegisterModel
@{
    ViewData["Title"] = "Kaydol";
}
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions


<h1 class="text-light">@ViewData["Title"]</h1>



<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="~/css/loginPage.css" rel="stylesheet">


</head>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="text-light">@Localizer["kayitol"]</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group text-light">
                <label hidden asp-for="Input.Role"></label>
                <select hidden asp-for="Input.Role" class="form-control">
                    <option hidden selected value="1">@Localizer["kullaniciUyeligi"]</option>
                </select>

                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

            <div class="form-group text-light">
                <label> @Localizer["username"]</label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <div class="form-group text-light">
                <label> @Localizer["adsoyad"]</label>
                <input asp-for="Input.KullaniciAdVeSoyad" class="form-control" />
                <span asp-validation-for="Input.KullaniciAdVeSoyad" class="text-danger"></span>
            </div>

            <div class="form-group text-light">
                <label>@Localizer["cinsiyet"]</label>
                <select asp-for="Input.KullaniciCinsiyet">
                    <option disabled>@Localizer["CinsiyetSeciniz"]</option>
                    <option value="Kadın">@Localizer["kadin"]</option>
                    <option value="Erkek">@Localizer["erkek"]</option>
                </select>
                <span asp-validation-for="Input.KullaniciCinsiyet" class="text-danger"></span>
            </div>
            <div class="form-group text-light">
                <label>@Localizer["dogumgunu"]</label>
                <input type="date" asp-for="Input.DogumTarihi" class="form-control" />
                <span asp-validation-for="Input.DogumTarihi" class="text-danger"></span>
            </div>

            <div class="form-group text-light">
                <label>@Localizer["mail"]</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group text-light">
                <label>@Localizer["sifre"]</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group text-light">
                <label>@Localizer["sifreTekrar"]</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Kaydol</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
